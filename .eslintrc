{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "semi": [2, "never"],
    "react/prop-types": 0,
    "react/no-unescaped-entities": 0,

    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  },
  "env" : {
      "browser": true,
      "node": true 
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  }
}